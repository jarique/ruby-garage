{% extends "base.html.twig" %}

{% block title %}Login{% endblock %}

{% block body %}
    <div id="content">
        <form action="{{ path('login') }}" method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <h3 class="font-weight-normal">Please sign in</h3>

            <div class="form-group">
                <label for="username">Email address</label>
                <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" placeholder="Enter email">
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" class="form-control" name="_password" placeholder="Enter password">
            </div>

            <input type="hidden" name="_target_path" value="{{ path('project-list') }}"/>

            <button class="btn btn-primary" type="submit">Login</button>
        </form>
    </div>
{% endblock %}
