{% extends "base.html.twig" %}

{% block title %}Todo lists{% endblock %}

{% block body %}
    <div id="content">
        <h2>SIMPLE TODO LISTS</h2>

        <h4>FROM RUBY GARAGE</h4>

        <div id="projects">
            <div class="project">

                {# Project section #}
                <div class="project-name">
                    <span class="glyphicon glyphicon-calendar"></span>
